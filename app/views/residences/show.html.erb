<h1> <%= @residence.name %> </h1>
<div class="card">
  <div class="card-header">
    Detalle
  </div>
  <div class="card-body">
    <h5 class="card-title">Vení a cononcer <%=@residence.name%></h5>
    <p class="card-text">Ubicado en <%=@residence.country%> en la ciudad de <%=@residence.city%></p>
    <p class="card-text">Direccion: <%=@residence.address%></p>
    <p class="card-text">Descripcion: <%=@residence.description%></p>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.adsttc.com/media/images/55e6/1d73/8450/b50b/9b00/00c7/slideshow/506da91628ba0d662c00004d_residencia-bj41-r79_img_0882-jpg.jpg?1441144167" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.adsttc.com/media/images/55e6/1d73/8450/b50b/9b00/00c7/slideshow/506da91628ba0d662c00004d_residencia-bj41-r79_img_0882-jpg.jpg?1441144167" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.adsttc.com/media/images/55e6/1d73/8450/b50b/9b00/00c7/slideshow/506da91628ba0d662c00004d_residencia-bj41-r79_img_0882-jpg.jpg?1441144167" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  </div>
</div>
<table class="table">
  <tr>
    <th>Fechas de reserva</th>
    <th>Inicio de subasta</th>
    <th>Accion</th>
  </tr>
  <% @residence.reservations.where('reservation_date > ?', 6.months.from_now).limit(10).each do |r| %>
    <tr>
        <td><%= r.reservation_date %></td>
        <td>
          <% if r.auction.startDate < Date.today %>
            <%= r.auction.startDate %>
            <%= '¡Activa!' %>
            <% else %>
              <%= r.auction.startDate %>
            <% end %>
        </td>
        <td>
          <% if current_user.premium? %>
            <button type="button" class="btn btn-success">Reservar</button>
            <% else %>

              <% if r.auction.startDate < Date.today %>
                <%= link_to 'Subastar', [:edit, r.auction], class: 'btn btn-outline-success' %>
                <% else %>
                  <button type="button" class="btn btn-success" disabled>Subastar</button>
                <% end %>
            <% end %>
        </td>
    </tr>
  <% end %>
</table>
