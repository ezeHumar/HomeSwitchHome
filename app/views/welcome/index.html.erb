<h1>Bienvenido a HomeSwitchHome</h1>

<% if !current_user.admin? %>
  <hr>
  <h3>Buscador de reservas:</h3>

  <div class="row">
    <div class="col-lg-6">
        <%# form_tag(reservations_path, method: :get) do %>
          <div class="input-group">
            <%# select_tag "residence_id", options_from_collection_for_select(@residences, "id", "name"), :class => 'form-control' %>
            <%# date_field_tag(:date_start) %>
            <%# date_field_tag(:date_end)%>
          <span class="input-group-btn">
            <%# submit_tag("Buscar", class: 'btn btn-info') %>
          </span>
        <%# end %>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  </div><!-- /.row -->

  <%= simple_form_for :reservation, url: reservations_path, method: :get do |f| %>

    <%= f.input :residence_id, label: 'Residencia', required: true, collection: Residence.all.reject { |s| s.deleted == true }.map { |r| [r.name, r.id] }%>

      <%= f.input :date_start, label: 'Fecha inicio', required: true, input_html: { class: 'reservationDate-picker' }, as: :string %>
      <%= f.input :date_end, label: 'Fecha fin', required: true, input_html: { class: 'reservationDate-picker' }, as: :string %>
      <%= f.button :submit, 'Buscar', class: 'btn btn-info' %>
  <% end %>

<% end %>

<hr>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.adsttc.com/media/images/55e6/1d73/8450/b50b/9b00/00c7/slideshow/506da91628ba0d662c00004d_residencia-bj41-r79_img_0882-jpg.jpg?1441144167" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="http://www.cuidadosdignos.org/wp-content/nuevo/LOMBARDIA4.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://3.bp.blogspot.com/-egZODanaPAw/U5TW47OIhKI/AAAAAAAAwF8/PN2VhFetFtM/s1600/estilo-rustico-mezclado-con-el-lujo-residencia-burlingame-1.jpg" alt="Third slide">
    </div>
  </div>
