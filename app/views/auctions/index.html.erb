    <td><%= auction.email %></td>
    <td>
      <%= link_to edit_auction_path(auction), class:"btn btn-info" do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <%end%>
      <%= link_to auction, method: :delete, class:"btn btn-danger", data: { confirm: 'Â¿Quiere eliminar la subasta realmente?' } do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
      <%end%>
    </td>
  </tr>
 <%end%>
</table>

