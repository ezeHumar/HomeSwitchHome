<% flash.each do |key, value| %>
<div class="alert alert-<%=key%>"><%=value%></div>
<%end%>
<h3>Subastas</h3>
<table class="table">
<tr>
  <th>Residencia</th>
  <th>Fecha</th>
  <th>Precio actual</th>
  <th>Mejor postor</th>
  <th>Accion</th>
</tr>
<%@auctions.each do |auction|%>
<tr>
  <td><%=auction.residence.name %></td>
  <td><%=auction.startDate%></td>
  <td><%=auction.amount%></td>
  <td><%=auction.email%></td>
  <td><%=link_to 'Subastar', [:edit, auction], class: 'btn btn-outline-success'%></td>
</tr>
<%end%>
</table>

<% if current_user.admin? %>
  <div>
    <%= link_to 'Agregar subasta', new_admin_auction_path, class: 'btn btn-info'%>
  </div>
<% end %>
